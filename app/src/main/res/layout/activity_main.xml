<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    <ir.noavar.outlet.customs.SolidTextView
        android:id="@+id/fab"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/plus_background"
        android:paddingTop="20dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="22dp" />

    <Spinner
        android:id="@+id/am_sp_sw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/Standard_Margin_X2"
        android:background="@drawable/selector_textview"
        android:gravity="right"
        android:layoutDirection="rtl"
        android:paddingLeft="@dimen/Standard_Margin"
        android:paddingRight="@dimen/Standard_Margin"
        android:spinnerMode="dropdown"
        android:textSize="@dimen/Standard_Font_Size" />
    <RelativeLayout
        android:id="@+id/main_rl_onof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/am_sp_sw"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/Standard_Margin">
    <Button
        android:id="@+id/main_btn_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/Standard_Margin_X2"
        android:layout_marginTop="@dimen/Standard_Margin_X2"
        android:layout_marginEnd="@dimen/Standard_Margin_X2"
        android:layout_marginBottom="@dimen/Standard_Margin_X2"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/Middle_Font_Size"
        android:text="روشن"
        android:textColor="@color/colorTextGraydark"
        android:textSize="@dimen/Standard_Font_Size_dp" />

    <Button
        android:id="@+id/main_btn_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/Standard_Margin_X2"
        android:layout_marginTop="@dimen/Standard_Margin_X2"
        android:layout_marginEnd="@dimen/Standard_Margin_X2"
        android:layout_marginBottom="@dimen/Standard_Margin_X2"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/Middle_Font_Size"
        android:text="خاموش"
        android:textColor="@color/colorTextGraydark"
        android:textSize="@dimen/Standard_Font_Size_dp"
        android:layout_toLeftOf="@id/main_btn_on"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/main_rl_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_rl_onof"
        android:layout_alignBottom="@id/recyclerview"
        android:layout_gravity="center"
        android:gravity="bottom|left"
        android:padding="@dimen/Standard_Margin">

        <Button
            android:id="@+id/main_btn_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/Standard_Margin_X2"
            android:layout_marginTop="@dimen/Standard_Margin_X2"
            android:layout_marginEnd="@dimen/Standard_Margin_X2"
            android:layout_marginBottom="@dimen/Standard_Margin_X2"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/Middle_Font_Size"
            android:text="کنترل محلی"
            android:textColor="@color/colorTextGraydark"
            android:textSize="@dimen/Standard_Font_Size_dp" />
    </RelativeLayout>
</RelativeLayout>